<div class="box-body no-padding" ng-controller="BarProgressController">
    <div class="nav-tabs-custom">
        <!-- Tabs within a box -->
        <ul class="nav nav-tabs pull-right" ng-init="tab = 1">
            <li class="active"><a href ng-click="tab = 1" data-toggle="tab">Views</a></li>
            <li><a href ng-click="tab = 2" data-toggle="tab">Following Users</a></li>
            <li><a href ng-click="tab = 3" data-toggle="tab">Likes</a></li>
            <li><a href ng-click="tab = 4" data-toggle="tab">Comments</a></li>
            <li class="pull-left header"><span class="glyphicon glyphicon-signal"></span> History Chart</li>
        </ul>
        <br>

        <div class="views-chart no-padding" ng-show="tab ===1">
            <canvas id="bar" width="500" height="135" class="chart chart-bar" chart-data="dataViews"
                    chart-labels="labels">
            </canvas>
        </div>
        <div class="following-users-chart" ng-show="tab === 2">
            <canvas id="bar" width="500" height="135" class="chart chart-bar" chart-data="dataFollowingUsers"
                    chart-labels="labels">
            </canvas>
        </div>
        <div class="likes-chart" ng-show="tab === 3">
            <canvas id="bar" width="500" height="135" class="chart chart-bar" chart-data="dataLikes"
                    chart-labels="labels">
            </canvas>
        </div>
        <div class="comments-chart" ng-show="tab === 4">
            <canvas id="bar" width="500" height="135" class="chart chart-bar" chart-data="dataComments"
                    chart-labels="labels">
            </canvas>
        </div>

    </div><!-- /.nav-tabs-custom -->
</div>