<!-- course edit form -->
<div class="row">
    <div class="modal" id="editTopicModal" tabindex="-1" role="dialog"
         aria-labelledby="Edit Topic" aria-hidden="true">
        <section class="content">
            <div class="row row-centered">
                <div class="col-xs-12 col-lg-8 col-md-8 col-sm-8 col col-centered">
                    <div class="widget-item box no-border no-round">
                        <div class="box-header with-border">
                            <h3 class="box-title">Edit Topic</h3>

                            <div class="box-tools pull-right">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                            </div>
                        </div>
                        <div class="box-body">
                            <form class="" role="form" ng-submit="saveEditPost()">
                                <fieldset>
                                    <div class="control-group">
                                        <label class="control-label" for="title">Title</label>

                                        <p class="help-block">Title can contain any letters or numbers</p>

                                        <div class="controls">
                                            <input type="text" id="title" name="title" placeholder=""
                                                   class="form-control"
                                                   ng-model="currentTopic.title">
                                        </div>
                                    </div>
                                    <br>

                                    <div class="control-group">
                                        <label class="control-label">Content</label>

                                        <div class="controls">
                                            <wysiwyg textarea-id="Content"
                                                     textarea-class="form-control"
                                                     textarea-height="180px"
                                                     textarea-name="Content"
                                                     textarea-required
                                                     ng-model="currentTopic.content"
                                                     textarea-menu="menu">
                                            </wysiwyg>
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <br class="clear">
                                        <span class="help-block" ng-show="errors">{{ errors }}</span>
                                        <!-- Button -->
                                        <div class="controls">
                                            <button class="btn btn-md btn-primary">Save</button>
                                            <button type="button" class="btn btn-md btn-primary"
                                                    data-dismiss="modal" aria-label="Close"
                                                    ng-click="cancel()">
                                                <span aria-hidden="true">Cancel</span>
                                            </button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>