                    <label>
                        <input type="checkbox" value="yes" name="rememberMe"> Remember me
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            </form>

            <form class="form-signUp" action="/accounts/signUp" method="post">
