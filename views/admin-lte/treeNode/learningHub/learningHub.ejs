<body  ng-controller="aggregationController" data-ng-init="init()">
<!-- Container top-level functions-->

<div class="container-fluid controls">
    <div class="row functions">
        <div class=" col-xs-offset-1 col-md-10">
            <form class="form-inline">
                <div class="form-group">
                    <select ng-model="postType" class="form-control" ng-options="type as type for type in postTypes" ng-change="typeChange()"></select>
                </div>
                <div class="form-group">
                    <select ng-model="sortTime" class="form-control" ng-options="time as time for time in sortTimes" ng-change="typeChange()"></select>
                </div>
                <div class="form-group">
                    <input type="text" name="search" class="form-control" placeholder="Search by tags or text" ng-model="query" ng-keypress="($event.charCode==13) ? search() : null">
                </div>
                <div class="form-group pull-right">
                    <button class="btn btn-primary pull-right" type="button" ng-click = 'spaceChange()'>{{currentSpace}}</button> &nbsp;
                </div>
                <div class="form-group pull-right">
                    <button class="btn btn-primary pull-right" type="button" data-toggle="modal" data-target="#Addlink"> Add a link</button>
                </div>
            </form>

        </div>
    </div>
</div>



<!-- Default page when there is no link added-->
<div class="container-fluid" ng-show="posts.length==0">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h4>No posts found for this content<br>Press Add link on the top to add posts</h4>
        </div>
    </div>
</div>
<!-- End of DefaultPage -->


<!-- presenting  the aggregated links from the DB-->
<div class="container fluid" ng-show="posts.length>0">
    <hub-link ng-repeat="post in posts" post="post"></hub-link>
</div>
<add-link></add-link>

</body>
</html>
