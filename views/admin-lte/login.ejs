<% include header %>
<div class="wrapper">

    <!-- Header Navbar -->
    <% include mainMenu %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" ng-controller="MainMenuController">

        <!-- Main content -->
        <section class="content">
            <div class="col-md-12">
                <form class="form-horizontal" action='/accounts/login' method="POST">
                    <fieldset>
                        <div id="legend">
                            <h1>Log In</h1>
                        </div>
                        <div class="control-group">
                            <!-- Username -->
                            <label class="control-label"  for="username">Username</label>
                            <div class="controls">
                                <input type="text" id="username" name="username" placeholder="" class="form-control">
                            </div>
                        </div>

                        <div class="control-group">
                            <!-- Password-->
                            <label class="control-label" for="password">Password</label>
                            <div class="controls">
                                <input type="password" id="password" name="password" placeholder="" class="form-control">
                                <p class="help-block"> </p>
                            </div>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" value="yes" name="rememberMe" ng-model="rememberMe" ng-checked="rememberMe"> Remember me
                            </label><p class="help-block"></p>
                        </div>

                        <div class="control-group">
                            <!-- Button -->
                            <div class="controls">
                                <button class="btn btn-lg btn-primary btn-block">Login</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

</div><!-- ./wrapper -->
<% include jsfooter %>
<% include footer %>
