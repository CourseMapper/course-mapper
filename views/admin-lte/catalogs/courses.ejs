<% include ../header %>
<div class="wrapper">

    <!-- Header Navbar -->
    <% include ../mainMenu %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <section class="content-header">
            <ol class="breadcrumb">
                <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
                <li class="active">Browse Courses</li>
            </ol>
            <!-- Sidebar toggle button-->

        </section>

        <% /*include ../sidebar*/ %>
        <!-- for routing purpose we write it as an ng-view although we write the html also in this file. -->
        <section class="content" ng-view>
        </section>

        <!-- Main content -->
        <script type="text/ng-template"  id="courses_list.html">

            <div class="col-md-12">
                <div class="col-md-12 filter">
                    <h4>Filtered By:</h4>
                    <span class="label label-primary">
                        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        &nbsp;Processing</span>
                    <h4>Available Tags:</h4>
                    <span class="label label-primary" ng-repeat="t in tags">{{t.tag}}</span>
                    <h4>Courses:</h4>
                </div>


                <div class="col-sm-6 col-lg-3" ng-repeat="c in courses">
                    <div class="form_hover">
                        <div class="box box-primary peekCourse">
                            <div class="box-header with-border">
                                <a href="/course/{{c._id}}" class="box-title">{{c.course}}</a>
                            </div>
                            <div class="box-body"  style="text-align: center" >
                            <img src="/img/default-tree.png">
                            </div>
                        </div>

                        <div class="header">
                            <div class="blur"></div>
                            <div class="box box-primary caption-text">
                                <div class="box-header with-border">
                                    <a href="/course/{{c._id}}" class="box-title">{{c.course}}</a>
                                </div>
                                <div class="box-body">
                                    <div class="form-group">
                                        Started Date:<b>02/09/2014</b>
                                    </div>
                                    <div class="form-group">
                                        Last activity:<b>2 days ago</b>
                                    </div>
                                    <div class="form-group">
                                        User Rating:<br/>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-o"></i>
                                    </div>
                                    <a class="btn btn-primary" href="/course/{{c._id}}"><i class=""></i> Go to course</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </script>

        <br class="clear">
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

</div><!-- ./wrapper -->

<% include ../jsfooter %>
<% include ../footer %>