<% include header %>
<div class="wrapper">

    <!-- Header Navbar -->
    <% include mainMenu %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Main content -->
        <section class="content">
            <div class="row row-centered">
                <div class="col-xs-12 col-md-6 col-centered">

                    <div class="box no-border">
                        <div class="box-body no-border">
                            <div id="legend">
                                <h2>Forgot Password</h2>
                            </div>

                            <div ng-controller="ResetPasswordController">
                                <form name="resetForm" ng-submit="requestReset(resetForm.$valid)" novalidate>
                                    <fieldset>
                                        <div class="control-group"
                                             ng-class="{ 'has-error' : resetForm.username.$invalid && !resetForm.$pristine }">
                                            <!-- Username -->
                                            <label class="control-label" for="username">Username</label>

                                            <div class="controls">
                                                <input type="text" id="username" name="username" placeholder=""
                                                       class="form-control" ng-model="loginData.username"
                                                       required ng-required="true">

                                                <p ng-show="resetForm.username.$invalid && !resetForm.$pristine"
                                                   class="help-block">Username is required.</p>

                                            </div>
                                        </div>

                                        <div class="control-group">
                                            <error-block ng-show="errors.length > 0" messages="errors"></error-block>
                                        </div>
                                        <div class="control-group">
                                            <br>
                                            <!-- Button -->
                                            <div class="controls">
                                                <button class="btn btn-primary btn-block"
                                                        ng-click="resetForm.$pristine = false">Reset Password
                                                    <spinner show="isLoading"></spinner>
                                                </button>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

</div><!-- ./wrapper -->
<% include jsfooter %>
<% include footer %>



