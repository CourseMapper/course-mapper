<!-- Main content -->
<div class="col-lg-12" id="Tabs">
    <!-- Custom Tabs -->
    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
            <li class="active">
                <a data-toggle="tab" data-target="#tab_1">Recommendations</a></li>
            <!--<li>
                <a data-toggle="tab" data-target="#tab_2">Active</a></li>
            <li>
                <a data-toggle="tab" data-target="#tab_3">Not Active</a></li>-->
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_1">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Date Added</th>
                        <th>Recommendation</th>
                        <th>Delete</th>
                    </tr>
                    <tr ng-repeat="tab in categories">
                        <td>
                            {{tab.dateAdded | relativeDate}}
                        </td>
                        <td>
                            <strong>{{tab.name}}</strong>  <br>

                            <strong>by: {{tab.user.displayName}}</strong>
                            <br>

                            {{tab.description}}
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning"
                                    ng-click="delete(tab._id)">
                                Delete
                            </button>
                        </td>
                    </tr>
                </table>
            </div>
