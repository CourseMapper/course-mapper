<!-- Main content -->
<div class="col-lg-12" id="Tabs">
    <!-- Custom Tabs -->
    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
            <li class="active">
                <a data-toggle="tab" data-target="#tab_1">All Tabs</a></li>
            <li>
                <a data-toggle="tab" data-target="#tab_2">Active</a></li>
            <li>
                <a data-toggle="tab" data-target="#tab_3">Not Active</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_1">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>No</th>
                        <th>Location</th>
                        <th>Name</th>
                        <th>Activate</th>
                    </tr>
                    <tr ng-repeat="tab in tabs">
                        <td>{{tab.orderNo}}</td>
                        <td>
                            {{tab.location}}
                        </td>
                        <td>
                            <h4>{{tab.name}}</h4>
                            <strong>{{tab.displayName}}</strong><br>

                            {{tab.description}}
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary" ng-show="!tab.isActive"
                                    ng-click="activate(tab.name)">
                                Activate
                            </button>

                            <button class="btn btn-sm btn-warning" ng-show="tab.isActive"
                                    ng-click="deactivate(tab.name)">
                                Deactivate
                            </button>
                        </td>
                    </tr>
                </table>
            </div>
            <!-- /.tab-pane -->
            <div class="tab-pane" id="tab_2">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>No</th>
                        <th>Location</th>
                        <th>Name</th>
                        <th>Activate</th>
                    </tr>
                    <tr ng-repeat="tab in tabs" ng-show="tab.isActive">
                        <td>{{tab.orderNo}}</td>
                        <td>
                            {{tab.location}}
                        </td>
                        <td>
                            <h4>{{tab.name}}</h4>
                            <strong>{{tab.displayName}}</strong><br>

                            {{tab.description}}
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary" ng-show="!tab.isActive"
                                    ng-click="activate(tab.name)">
                                Activate
                            </button>

                            <button class="btn btn-sm btn-warning" ng-show="tab.isActive"
                                    ng-click="deactivate(tab.name)">
                                Deactivate
                            </button>
                        </td>
                    </tr>
                </table>
            </div>
            <!-- /.tab-pane -->
            <div class="tab-pane" id="tab_3">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>No</th>
                        <th>Location</th>
                        <th>Name</th>
                        <th>Activate</th>
                    </tr>
                    <tr ng-repeat="tab in tabs" ng-hide="tab.isActive">
                        <td>{{tab.orderNo}}</td>
                        <td>
                            {{tab.location}}
                        </td>
                        <td>
                            <h4>{{tab.name}}</h4>
                            <strong>{{tab.displayName}}</strong><br>

                            {{tab.description}}
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary" ng-show="!tab.isActive"
                                    ng-click="activate(tab.name)">
                                Activate
                            </button>

                            <button class="btn btn-sm btn-warning" ng-show="tab.isActive"
                                    ng-click="deactivate(tab.name)">
                                Deactivate
                            </button>
                        </td>
                    </tr>
                </table>
            </div>
            <!-- /.tab-pane -->
        </div>
    </div>
    <!-- /.tab-content -->
</div>
<!-- nav-tabs-custom -->

<div class="clear"></div>