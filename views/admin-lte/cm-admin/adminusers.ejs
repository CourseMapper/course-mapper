<!-- Main content -->
<div class="col-lg-12" id="Applications">
    <!-- Custom Tabs -->
    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
            <li class="active">
                <a data-toggle="tab" data-target="#tab_1">Admin Users</a></li>
            <li class="active">
                <a data-toggle="tab" data-target="#tab_2">Add Admin</a></li>

        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="tab_1">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>
                            <a class="pointer" ng-click="sortType = 'location'; sortReverse = !sortReverse">Location</a>
                            <span ng-show="sortType == 'location' && !sortReverse" class="fa fa-caret-down"></span>
                            <span ng-show="sortType == 'location' && sortReverse" class="fa fa-caret-up"></span>
                        </th>
                        <th><a class="pointer" ng-click="sortType = 'name'; sortReverse = !sortReverse">Widget</a>
                            <span ng-show="sortType == 'name' && !sortReverse" class="fa fa-caret-down"></span>
                            <span ng-show="sortType == 'name'  && sortReverse" class="fa fa-caret-up"></span>
                        </th>
                        <th>
                            <a class="pointer" ng-click="sortType = 'application'; sortReverse = !sortReverse">Group</a>
                            <span ng-show="sortType == 'application' && !sortReverse" class="fa fa-caret-down"></span>
                            <span ng-show="sortType == 'application' && sortReverse" class="fa fa-caret-up"></span>

                        </th>
                        <th>Activate</th>
                    </tr>
                    <tr ng-repeat="widget in widgets | orderBy:sortType:sortReverse"
                        ng-show="widget.location != 'background-plugin'">
                        <td>
                            {{widget.location}}
                        </td>
                        <td>
                            {{widget.name}}
                        </td>
                        <td>
                            {{widget.application}}
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary" ng-show="!widget.isActive"
                                    ng-click="activate(widget.application, widget.name)">
                                Activate
                            </button>

                            <button class="btn btn-sm btn-warning" ng-show="widget.isActive"
                                    ng-click="deactivate(widget.application, widget.name)">
                                Deactivate
                            </button>
                        </td>
                    </tr>
                </table>
            </div>

            <div class="tab-pane active" id="tab_2">
                <div class="box">
                    <div class="box-body with-border">

                        <error-block messages="errors"></error-block>

                        <div ng-controller="categoryFormController">
                            <form role="form" ng-submit="processForm('root')" id="rootCategory">
                                <div class="col-xs-6 input-group input-group-sm">
                                    <input type="text" name="category" class="form-control input-sm col-xs-3"
                                           placeholder="Add New Category ..." ng-model="formData['root'].name"/>
                                    <input type="hidden" name="parent" ng-value="0" value="0"
                                           ng-model="formData['root'].parentCategory"/>
                              <span class="input-group-btn">
                              <button class="btn btn-info btn-flat" type="submit"><i class="fa fa-plus"></i> Add New
                                  Category
                              </button>
                              </span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.tab-content -->
</div>
<!-- nav-tabs-custom -->

<div class="clear"></div>