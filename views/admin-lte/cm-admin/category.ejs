<!-- Main content -->
<div class="col-lg-12">
    <div class="box">
        <div class="box-body with-border">
            <div ng-controller="categoryDetailController">
                <h3>Category : {{category.name}}</h3>

                <div class="panel box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="">
                                Tags:
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in" ng-controller="tagFormController">
                        <div class="box-body">
                            <form role="form" ng-submit="processForm()" id="rootCategory">
                                <div class="col-xs-6 input-group input-group-sm" ng-class="{ 'has-error' : errorName }">
                                    <input type="text" name="category" class="form-control input-sm col-xs-3"
                                           placeholder="Add New Tags ..." ng-model="formData.name"/>
                                    <input type="hidden" name="parent" ng-value="category._id"
                                           value="{{category._id}}"
                                           ng-model="formData.category" ng-init="formData.category=category._id"/>
                              <span class="input-group-btn">
                              <button class="btn btn-info btn-flat" type="submit" ng-click="setCategory(category._id)">
                                  <i class="fa fa-plus"></i> Add New
                                  Tag
                              </button>
                              </span>
                                </div>
                                <span class="help-block" ng-show="errorName">{{ errorName }}</span>
                            </form>

                            <div class="box-body">
                                <ul class="nav nav-pills nav-stacked" ng-show="(tags.length)">
                                    <li ng-repeat="tag in tags">
                                        <a href="">{{tag.name}}</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="">
                                Courses:
                            </a>
                        </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse in" ng-controller="courseFormController">
                        <div class="box-body">

                            <form role="form" ng-submit="processForm()" id="addCourse">
                                <div class="col-xs-6 input-group input-group-sm" ng-class="{ 'has-error' : errorName }">
                                    <input type="text" name="course" class="form-control input-sm col-xs-3"
                                           placeholder="Add New Course ..." ng-model="formData.name"/>
                                    <input type="hidden" name="category" ng-value="category._id"
                                           value="{{category._id}}"
                                           ng-model="formData.category" ng-init="formData.category=category._id"/>
                              <span class="input-group-btn">
                              <button class="btn btn-info btn-flat" type="submit" ng-click="setCategory(category._id)">
                                  <i class="fa fa-plus"></i> Add New Course
                              </button>
                              </span>
                                </div>
                                <span class="help-block" ng-show="errorName">{{ errorName }}</span>
                            </form>

                            <div class="box-body">
                                <ul class="nav nav-pills nav-stacked" ng-show="(courses.length)">
                                    <li ng-repeat="c in courses">
                                        <a href="">{{c.name}}</a>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</div>