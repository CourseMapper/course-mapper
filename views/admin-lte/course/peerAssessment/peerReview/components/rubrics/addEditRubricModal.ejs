<!-- course edit form -->
<div class="row" ng-controller="AddEditRubricModalController">
    <div class="modal" id="addEditRubricModal" tabindex="-1" role="dialog"
         aria-labelledby="Add/Edit Rubric Modal" aria-hidden="true">
        <section class="content">
            <div class="row row-centered">
                <div class="col-xs-12 col-lg-9 col-md-9 col-sm-9 col col-centered">
                    <div class="box no-border no-round">
                        <div class="box-header with-border">
                            <h3 class="box-title">Add/Edit Rubric</h3>

                            <div class="box-tools pull-right">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="cancel()"><span
                                            aria-hidden="true">&times;</span></button>
                            </div>
                        </div>
                        <div class="box-body">
                            <form class="form-horizontal horizontal-max" name="addEditRubricForm" role="form" ng-submit="saveNewPost(addEditRubricForm.$valid)" novalidate>

                                <fieldset>
                                    <div class="form-group">
                                        <label for="inputTitle" class="col-sm-4 control-label">Title *</label>
                                        <div class="col-sm-5">
                                            <input type="text" class="form-control original-form-control" id="inputTitle" ng-model="rubric.title" placeholder="Title">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputRubricDescription" class="col-sm-4 control-label">Rubric Description *</label>
                                        <div class="col-sm-5">
                                            <textarea rows="7" class="form-control original-form-control" id="inputRubricDescription" ng-model="rubric.description" placeholder="Rubric Decription"/>
                                        </div>
                                    </div>


                                    <div class="box-footer control-group">
                                        <br class="clear">
                                        <error-block ng-show="errors.length > 0" messages="errors"></error-block>
                                        <!-- Button -->
                                        <div class="controls pull-right">
                                            <button class="btn btn-primary" ng-click="saveRubric()"> Save
                                                <spinner show="isLoading"></spinner>
                                            </button>

                                            <cancel></cancel>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>