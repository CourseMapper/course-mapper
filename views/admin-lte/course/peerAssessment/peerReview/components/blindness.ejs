<div class="form-horizontal horizontal-max" ng-controller="BlindController">
    <fieldset>
        <div class="form-group">
            <label class="col-sm-5 control-label">Blindness</label>
            <div class="col-sm-7">
                <div class="col-sm-2">
                    <label class="radio-inline"><input type="radio" name="blindness" ng-model="newAssignObj.reviewSettings.blind" value="single">Single</label>
                </div>
                <div class="col-sm-2">
                    <label class="radio-inline"><input type="radio" name="blindness" ng-model="newAssignObj.reviewSettings.blind" value="double">Double</label>
                </div>
                <div class="col-sm-2">
                    <label class="radio-inline"><input type="radio" name="blindness" ng-model="newAssignObj.reviewSettings.blind" value="none">None</label>
                </div>
            </div>
        </div>
    </fieldset>
</div>
