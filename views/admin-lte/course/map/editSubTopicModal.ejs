<!-- Main content -->
<section class="content" ng-controller="NodeEditController">
    <div class="row row-centered">
        <div class="col-xs-12 col-md-5 col-centered">
            <div class="box no-border" ng-init="init()">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit Sub Topic</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                    </div>
                </div>

                <div class="box-body no-border">
                    <form role="form" ng-submit="saveEditNode(editSubTopicForm.$valid)" name="editSubTopicForm"
                          novalidate>
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="name">Edit Sub Topic Name</label>

                                <p class="help-block">It can contain any letters or numbers</p>

                                <div class="controls"
                                     ng-class="{ 'has-error' : editSubTopicForm.name.$invalid && !editSubTopicForm.$pristine }">
                                    <input type="text" id="name" name="name" placeholder="" class="form-control"
                                           ng-model="currentEditNode.name"
                                           required ng-required="true">
                                    <!--<br/>-->
                                    <!--<label>-->
                                        <!--<input type="checkbox" ng-model="currentEditNode.isPrivate">-->
                                        <!--Is private-->
                                    <!--</label>-->

                                    <p ng-show="editSubTopicForm.name.$invalid && !editSubTopicForm.$pristine"
                                       class="help-block">{{currentNodeAction.typeText}} Name is required.</p>
                                </div>
                            </div>
                            <div class="control-group">
                                <p class="help-block"></p>

                                <div class="box-footer">
                                    <error-block ng-show="errors.length > 0" messages="errors"></error-block>
                                    <!-- Button -->
                                    <div class="controls">
                                        <button class="btn btn-primary" ng-click="editSubTopicForm.$pristine=false">
                                            Save
                                            <spinner show="isLoading"></spinner>
                                        </button>
                                        <button type="button" class="btn btn-warning"
                                                data-dismiss="modal" aria-label="Close"
                                                ng-click="cancel()">

                                            <span aria-hidden="true">Cancel</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <!-- ./CourseEditController-->
        </div>
    </div>
</section>